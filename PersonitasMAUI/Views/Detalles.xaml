<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonitasMAUI.Views.Detalles"
             Title="Detalles">

    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="5">
            <Label Text="{Binding Nombre}" FontSize="20"></Label>
            <Label Text="{Binding Apellidos}" FontSize="20"></Label>
        </HorizontalStackLayout>
        <Image Source="{Binding Foto}" MaximumHeightRequest="130" MinimumHeightRequest="130" HorizontalOptions="Start"></Image>
        <HorizontalStackLayout>
            <Label Text="Fecha de nacimiento: " FontSize="20"></Label>
            <Label Text="{Binding FechaNacimiento}" FontSize="20"></Label>
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="5">
            <Label Text="Departamento: " FontSize="20"></Label>
            <Label Text="{Binding NombreDepartamento}" FontSize="20"></Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>