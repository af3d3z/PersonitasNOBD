<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonitasMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonitasMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PersonitasMAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent 
        Title="Agregar"
        ContentTemplate="{DataTemplate local:Agregar}"
        Route="Agregar"/>
</Shell>
